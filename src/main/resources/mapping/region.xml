<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hyz.weather.entity.mapping">
    <!-- 地区列表 -->
    <select id="listByParentId" parameterType="java.lang.Integer" resultType="com.hyz.weather.entity.Region">
        select * from region as r where r.parent_id = #{parentId}
    </select>
    <!--  修改Cid  -->
    <update id="updateCid" parameterType="com.hyz.weather.entity.Region">
        update region set cid=#{cid} where `name` like #{name}
    </update>
</mapper>